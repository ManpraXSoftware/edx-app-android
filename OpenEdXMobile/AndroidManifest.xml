        <activity
            android:name="org.tta.mobile.view.CourseOutlineActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar.TranslucentStatusBar" />

        <activity
            android:name="org.tta.mobile.view.CourseDiscussionTopicsActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar.TranslucentStatusBar" />

        <activity
            android:name="org.tta.mobile.view.CourseDiscussionPostsActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/discussion_title"
            android:theme="@style/AppTheme.NoActionBar.TranslucentStatusBar" />

        <activity
            android:name="org.tta.mobile.view.CourseDiscussionCommentsActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar.TranslucentStatusBar" />

        <activity
            android:name="org.tta.mobile.view.CourseDiscussionResponsesActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar.TranslucentStatusBar" />

        <activity
            android:name="org.tta.mobile.view.DiscussionAddPostActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/start_discussion"
            android:theme="@style/AppTheme.NoActionBar.TranslucentStatusBar" />

        <activity
            android:name="org.tta.mobile.view.DiscussionAddResponseActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/discussion_add_response_title"
            android:theme="@style/AppTheme.NoActionBar.TranslucentStatusBar" />

        <activity
            android:name="org.tta.mobile.view.DiscussionAddCommentActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/discussion_add_comment_title"
            android:theme="@style/AppTheme.NoActionBar.TranslucentStatusBar" />

        <activity
            android:name="org.tta.mobile.view.CourseUnitNavigationActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:screenOrientation="user"
            android:theme="@style/AppTheme.NoActionBar.TranslucentStatusBar" />

        <activity
            android:name="org.tta.mobile.view.DownloadListActivity"
            android:label="@string/title_download"
            android:theme="@style/AppTheme.NoActionBar.TranslucentStatusBar" />

        <activity
            android:name="org.tta.mobile.view.WebViewFindCoursesActivity"
            android:label="@string/label_discover"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar.TranslucentStatusBar" />

        <activity
            android:name="org.tta.mobile.view.ViewSubjectsActivity"
            android:label="@string/browse_by_subject"
            android:theme="@style/AppTheme.NoActionBar.TranslucentStatusBar" />

        <activity
            android:name="org.tta.mobile.view.CourseInfoActivity"
            android:label="@string/label_discover"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar.TranslucentStatusBar" />

        <activity
            android:name="org.tta.mobile.view.CourseDetailActivity"
            android:label="@string/label_find_courses"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar.TranslucentStatusBar" />

        <activity
            android:name="org.tta.mobile.view.CourseHandoutActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar.TranslucentStatusBar" />

        <activity
            android:name="org.tta.mobile.view.NativeFindCoursesActivity"
            android:label="@string/label_find_courses"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar.TranslucentStatusBar" />

        <activity
            android:name="org.tta.mobile.view.CourseAnnouncementsActivity"
            android:label="@string/announcement_title"
            android:theme="@style/AppTheme.NoActionBar.TranslucentStatusBar" />

        <activity
            android:name="org.tta.mobile.view.CertificateActivity"
            android:label="@string/tab_label_certificate"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar.TranslucentStatusBar"/>

        <activity
            android:name="org.tta.mobile.view.SettingsActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar.TranslucentStatusBar" />

        <activity
            android:name="org.tta.mobile.profiles.UserProfileActivity"
