        <activity
            android:name="org.tta.mobile.view.RegisterActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar.TranslucentStatusBar" />

        <activity
            android:name="org.tta.mobile.view.MainDashboardActivity"
            android:theme="@style/AppTheme.NoActionBar.TranslucentStatusBar" />

        <activity
            android:name="org.tta.mobile.view.AccountActivity"
            android:label="@string/title_account"
            android:screenOrientation="portrait"
