<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:padding="15dp"
        app:srcCompat="@drawable/t_icon_close_16"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_18px"
        android:layout_marginBottom="@dimen/_54px"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="0dp"
        app:cardElevation="@dimen/_6px">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/feed_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20px"
                android:layout_marginEnd="@dimen/_20px"
                android:paddingTop="@dimen/_12px"
                android:paddingBottom="@dimen/_10px"
                android:textColor="@color/gray_5"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_2"
                app:layout_constraintTop_toBottomOf="@id/feed_title" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/meta_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/_38px"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/line1">

                <FrameLayout
                    android:id="@+id/content_image_layout"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginStart="@dimen/_40px"
                    android:layout_marginTop="@dimen/_28px"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/feed_content_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY" />

                    <ImageView
                        android:id="@+id/play_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/t_icon_play" />

                </FrameLayout>

                <TextView
                    android:id="@+id/feed_meta_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20px"
                    android:layout_marginEnd="@dimen/_40px"
                    android:fontFamily="@font/hind_medium"
                    android:textColor="@color/gray_5"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/content_image_layout"
                    app:layout_constraintTop_toTopOf="@id/content_image_layout" />

                <TextView
                    android:id="@+id/feed_meta_subtext"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20px"
                    android:layout_marginTop="@dimen/_18px"
                    android:layout_marginEnd="@dimen/_40px"
                    android:fontFamily="@font/hind_regular"
                    android:textColor="@color/gray_4"
                    android:textSize="10sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/content_image_layout"
                    app:layout_constraintTop_toBottomOf="@id/feed_meta_text"
                    android:visibility="gone"/>

                <Button
                    android:id="@+id/feed_btn"
                    android:layout_width="100dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="@dimen/_20px"
                    android:background="@drawable/btn_selector_hollow"
                    android:enabled="true"
                    android:fontFamily="@font/hind_medium"
                    android:gravity="center"
                    android:text="@string/view"
                    android:textColor="@color/primary_cyan"
                    android:textSize="12sp"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@id/content_image_layout"
                    app:layout_constraintStart_toEndOf="@id/content_image_layout" />

                <ImageView
                    android:id="@+id/item_image"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="@dimen/_20px"
                    android:scaleType="centerInside"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@id/content_image_layout"
                    app:layout_constraintStart_toEndOf="@id/content_image_layout" />

                <TextView
                    android:id="@+id/item_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:fontFamily="@font/hind_light"
                    android:textColor="@color/secondary_pink"
                    android:textSize="8sp"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@id/item_image"
                    app:layout_constraintStart_toEndOf="@id/item_image"
                    app:layout_constraintTop_toTopOf="@id/item_image" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:id="@+id/line2"
                android:background="@color/gray_2"
                android:layout_marginStart="@dimen/_40px"
                android:layout_marginEnd="@dimen/_40px"
                app:layout_constraintTop_toBottomOf="@id/meta_content"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginStart="@dimen/_40px"
                app:layout_constraintTop_toBottomOf="@id/line2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/share"
                    android:textColor="@color/gray_6"
                    android:textSize="12sp"
                    android:fontFamily="@font/hind_regular"
                    android:layout_gravity="center_vertical"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/feed_share_options_layout"
                    android:orientation="horizontal">



                </LinearLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>