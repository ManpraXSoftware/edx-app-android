<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="org.humana.mobile.tta.ui.profile.view_model.ChangePasswordViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/app_background"
                android:gravity="start|center_vertical"
                app:contentInsetLeft="0dp"
                app:contentInsetStart="0dp"
                app:contentInsetStartWithNavigation="0dp"
                app:navigationIcon="@drawable/back"
                app:title="@string/change_password"
                app:titleMarginStart="0dp"
                app:titleTextAppearance="@style/ta_toolbar_title_style" />

            <android.support.design.widget.TextInputLayout
                password_toggle_drawable="@{viewModel.oldPassDrawable}"
                password_toggle_enabled="@{viewModel.oldPassToggleEnabled}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_40px"
                android:layout_marginTop="@dimen/_66px"
                android:layout_marginEnd="@dimen/_40px"
                android:textColorHint="@color/gray_1"
                android:theme="@style/TextAppearence.App.TextInputLayout"
                app:hintTextAppearance="@style/TextColorHint">

                <android.support.design.widget.TextInputEditText
                    text_changed_listener="@{viewModel.oldWatcher}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/hind_medium"
                    android:hint="@string/old_password"
                    android:inputType="textPassword"
                    android:paddingBottom="@dimen/_14px"
                    android:text="@{viewModel.oldPass}"
                    android:textColor="@color/gray_4"
                    android:textColorHint="@color/gray_1"
                    android:textSize="14sp" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                password_toggle_drawable="@{viewModel.newPassDrawable}"
                password_toggle_enabled="@{viewModel.newPassToggleEnabled}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_40px"
                android:layout_marginTop="@dimen/_40px"
                android:layout_marginEnd="@dimen/_40px"
                android:textColorHint="@color/gray_1"
                android:theme="@style/TextAppearence.App.TextInputLayout"
                app:hintTextAppearance="@style/TextColorHint">

                <android.support.design.widget.TextInputEditText
                    text_changed_listener="@{viewModel.newWatcher}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/hind_medium"
                    android:hint="@string/new_password"
                    android:inputType="textPassword"
                    android:paddingBottom="@dimen/_14px"
                    android:text="@{viewModel.newPass}"
                    android:textColor="@color/gray_4"
                    android:textColorHint="@color/gray_1"
                    android:textSize="14sp" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                password_toggle_drawable="@{viewModel.confirmPassDrawable}"
                password_toggle_enabled="@{viewModel.confirmPassToggleEnabled}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_40px"
                android:layout_marginTop="@dimen/_34px"
                android:layout_marginEnd="@dimen/_40px"
                android:textColorHint="@color/gray_1"
                android:theme="@style/TextAppearence.App.TextInputLayout"
                app:hintTextAppearance="@style/TextColorHint">

                <android.support.design.widget.TextInputEditText
                    text_changed_listener="@{viewModel.ConfirmPassWatcher}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/hind_medium"
                    android:hint="@string/confirm_new_password"
                    android:inputType="textPassword"
                    android:paddingBottom="@dimen/_14px"
                    android:text="@{viewModel.confirmPassword}"
                    android:textColor="@color/gray_4"
                    android:textColorHint="@color/gray_1"
                    android:textSize="14sp" />

            </android.support.design.widget.TextInputLayout>

            <Button
                android:layout_width="240dp"
                android:layout_height="32dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="125dp"
                android:layout_marginBottom="125dp"
                android:background="@drawable/btn_selector_filled"
                android:enabled="@{viewModel.oldValid &amp;&amp; viewModel.newValid &amp;&amp; viewModel.confirmPassValid}"
                android:fontFamily="@font/hind_medium"
                android:gravity="center"
                android:onClick="@{()->viewModel.save()}"
                android:text="Save"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </LinearLayout>

    </ScrollView>

</layout>