<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="org.edx.mobile.tta.ui.profile.view_model.EditProfileViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_background"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rellayout"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginTop="@dimen/_60px">

            <android.support.v7.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_marginStart="@dimen/_20px"
                app:cardBackgroundColor="@color/gray_1"
                app:cardCornerRadius="4dp"
                app:cardElevation="0dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:id="@+id/user_image"
                        android:src="@{viewModel.profileImage == null ? null : viewModel.profileImage.imageUrlLarge}" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/imageProfile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="@{viewModel.imageAddVisible ? View.VISIBLE : View.GONE}"
                            app:srcCompat="@drawable/t_icon_add" />
                    </LinearLayout>
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="134dp"
                        android:layout_height="25dp"
                        android:layout_marginStart="@dimen/_4px"
                        android:layout_marginTop="@dimen/_4px"
                        android:layout_marginEnd="@dimen/_2px"
                        android:layout_marginBottom="@dimen/_4px"
                        android:layout_weight="1"
                        android:background="@color/white">

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:onClick="@{()->viewModel.takePhoto()}"
                            app:cardCornerRadius="4dp"
                            app:cardElevation="0dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                app:srcCompat="@drawable/t_icon_camera" />
                        </android.support.v7.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="134dp"
                        android:layout_height="25dp"
                        android:layout_marginStart="@dimen/_2px"
                        android:layout_marginTop="@dimen/_4px"
                        android:layout_marginEnd="@dimen/_4px"
                        android:layout_marginBottom="@dimen/_4px"
                        android:layout_weight="1"
                        android:background="@color/white">

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:onClick="@{()->viewModel.choosePhoto()}"
                            app:cardCornerRadius="4dp"
                            app:cardElevation="0dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                app:srcCompat="@drawable/t_icon_photos" />
                        </android.support.v7.widget.CardView>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="@dimen/_18px"
                android:layout_marginEnd="@dimen/_20px"
                android:layout_toEndOf="@+id/cardView"
                app:hintTextAppearance="@color/primary_navy">

                <android.support.design.widget.TextInputEditText
                    text_changed_listener="@{viewModel.nameWatcher}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/hind_regular"
                    android:hint="@string/write_name"
                    android:paddingBottom="@dimen/_14px"
                    android:text="@{viewModel.name}"
                    android:textColor="@color/gray_4"
                    android:textColorHint="@color/gray_1"
                    android:textSize="14sp" />

            </android.support.design.widget.TextInputLayout>

        </RelativeLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/classes_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20px"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="@dimen/_20px"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/hind_medium"
                        android:text="@string/classes_taught"
                        android:textColor="@color/gray_1"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/t_icon_dropdown_selected" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/_14px"
                    android:background="@color/gray_1" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/skills_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20px"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="@dimen/_20px"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/classes_layout">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/hind_medium"
                        android:text="@string/skills"
                        android:textColor="@color/gray_1"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/t_icon_dropdown_selected" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/_14px"
                    android:background="@color/gray_1" />

            </LinearLayout>

            <Button
                android:layout_width="220dp"
                android:layout_height="25dp"
                android:id="@+id/btn_save"
                android:layout_marginTop="80dp"
                android:background="@drawable/btn_selector_filled"
                android:enabled="@{viewModel.nameValid}"
                android:fontFamily="@font/hind_medium"
                android:gravity="center"
                android:text="Save"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/skills_layout" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/classes_expanded"
                android:background="@color/white"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/classes_layout"
                android:visibility="gone"
                android:elevation="6dp">

                <org.edx.mobile.tta.ui.custom.NonScrollListView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/classes_multi_choice_list"
                    android:scrollbars="none"
                    android:choiceMode="multipleChoice"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/skills_expanded"
                android:background="@color/white"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/skills_layout"
                android:visibility="gone"
                android:elevation="6dp">

                <org.edx.mobile.tta.ui.custom.NonScrollListView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/skills_multi_choice_list"
                    android:scrollbars="none"
                    android:choiceMode="multipleChoice"/>

            </LinearLayout>

        </android.support.constraint.ConstraintLayout>

    </LinearLayout>
</layout>