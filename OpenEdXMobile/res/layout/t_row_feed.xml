<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="org.edx.mobile.tta.data.local.db.table.Feed" />
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10px"
        android:layout_marginBottom="@dimen/_10px"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="0dp"
        app:cardElevation="@dimen/_6px">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/feed_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20px"
                android:layout_marginEnd="@dimen/_20px"
                android:paddingTop="@dimen/_12px"
                android:paddingBottom="@dimen/_10px"
                android:textSize="12sp"
                android:textColor="@color/gray_5"
                app:layout_constraintEnd_toStartOf="@id/feed_share"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/feed_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_40px"
                app:layout_constraintBottom_toBottomOf="@id/feed_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/feed_title"
                app:srcCompat="@drawable/t_icon_share" />

            <View
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_2"
                app:layout_constraintTop_toBottomOf="@id/feed_title" />

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/meta_content"
                android:paddingBottom="@dimen/_38px"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/line1">

                <FrameLayout
                    android:id="@+id/content_image_layout"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginStart="@dimen/_40px"
                    android:layout_marginTop="@dimen/_28px"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/feed_content_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY" />

                    <ImageView
                        android:id="@+id/play_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/t_icon_play" />

                </FrameLayout>

                <TextView
                    android:id="@+id/feed_meta_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray_5"
                    android:textSize="12sp"
                    android:fontFamily="@font/hind_medium"
                    android:layout_marginStart="@dimen/_20px"
                    android:layout_marginEnd="@dimen/_40px"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/content_image_layout"
                    app:layout_constraintTop_toTopOf="@id/content_image_layout" />

                <TextView
                    android:id="@+id/feed_meta_subtext"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray_4"
                    android:textSize="10sp"
                    android:fontFamily="@font/hind_regular"
                    android:layout_marginStart="@dimen/_20px"
                    android:layout_marginEnd="@dimen/_40px"
                    android:layout_marginTop="@dimen/_18px"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/content_image_layout"
                    app:layout_constraintTop_toBottomOf="@id/feed_meta_text" />

                <Button
                    android:id="@+id/feed_btn"
                    android:layout_width="100dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="@dimen/_20px"
                    android:background="@drawable/btn_selector_hollow"
                    android:enabled="true"
                    android:fontFamily="@font/hind_medium"
                    android:gravity="center"
                    android:text="@string/view"
                    android:textColor="@color/primary_cyan"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@id/content_image_layout"
                    app:layout_constraintStart_toEndOf="@id/content_image_layout" />

                <ImageView
                    android:id="@+id/item_image"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="@dimen/_20px"
                    android:scaleType="centerInside"
                    app:layout_constraintBottom_toBottomOf="@id/content_image_layout"
                    app:layout_constraintStart_toEndOf="@id/content_image_layout" />

                <TextView
                    android:id="@+id/item_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/secondary_pink"
                    android:textSize="8sp"
                    android:fontFamily="@font/hind_light"
                    android:layout_marginStart="4dp"
                    app:layout_constraintBottom_toBottomOf="@id/item_image"
                    app:layout_constraintStart_toEndOf="@id/item_image"
                    app:layout_constraintTop_toTopOf="@id/item_image" />

            </android.support.constraint.ConstraintLayout>

            <LinearLayout
                android:id="@+id/feed_like_comment_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_40px"
                android:layout_marginEnd="@dimen/_40px"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/meta_content">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_2" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/feed_like_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:padding="8dp">

                            <TextView
                                android:id="@+id/feed_likes"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:fontFamily="@font/hind_medium"
                                android:text="@{String.valueOf(viewModel.meta_data.like_count)}"
                                android:textColor="@color/gray_3"
                                android:textSize="12sp" />

                            <ImageView
                                android:id="@+id/feed_like_image"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="3dp"
                                android:contentDescription="@string/like"
                                android:paddingBottom="4dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="2dp"
                                android:fontFamily="@font/hind_medium"
                                android:text="@string/like"
                                android:textColor="@color/gray_3"
                                android:textSize="12sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/feed_comment_parent_layout"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/feed_comment_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:padding="8dp">

                            <TextView
                                android:id="@+id/feed_comments"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:fontFamily="@font/hind_medium"
                                android:text="@{String.valueOf(viewModel.meta_data.comment_count)}"
                                android:textColor="@color/gray_3"
                                android:textSize="12sp" />

                            <ImageView
                                android:id="@+id/feed_comment_image"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="3dp"
                                android:contentDescription="@string/like"
                                android:paddingBottom="4dp"
                                app:srcCompat="@drawable/t_icon_reply" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="2dp"
                                android:fontFamily="@font/hind_medium"
                                android:text="@string/comment"
                                android:textColor="@color/gray_3"
                                android:textSize="12sp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</layout>