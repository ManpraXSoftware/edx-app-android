<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />
        <variable
            name="viewModel"
            type="org.tta.mobile.tta.ui.course.discussion.view_model.DiscussionLandingViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.maurya.mx.mxlib.view.MxRecyclerView
            infinite_recycler_adapter="@{viewModel.topicsAdapter}"
            layout_manager="@{viewModel.topicsLayoutManager}"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/app_background"
            app:mx_itemLayout="@layout/t_row_discussion_topic" />

        <org.tta.mobile.view.custom.IconProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="@{viewModel.progressVisible?View.VISIBLE:View.GONE}"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:visibility="@{viewModel.emptyVisible ? View.VISIBLE : View.GONE}">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                app:srcCompat="@drawable/t_icon_alert"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_42px"
                android:layout_marginStart="@dimen/_70px"
                android:layout_marginEnd="@dimen/_70px"
                android:fontFamily="@font/hind_regular"
                android:gravity="center"
                android:text="@string/empty_discussion_message"
                android:textColor="@color/primary_cyan"
                android:textSize="12sp" />

        </LinearLayout>

    </FrameLayout>

</layout>