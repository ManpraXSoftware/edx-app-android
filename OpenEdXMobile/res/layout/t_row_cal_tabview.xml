<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="viewModel"
            type="org.humana.mobile.tta.ui.programs.units.view_model.UnitCalendarViewModel" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="140dp"
        android:background="@drawable/rectangle_border_background"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/cal_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:fontFamily="@font/hind_medium"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@android:color/black"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/day_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:fontFamily="@font/hind_medium"
            android:gravity="center"
            android:lines="1"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="@color/humana_card_background"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/day_event1"
            android:textSize="14sp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:fontFamily="@font/hind_medium"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:ellipsize="end"
            android:lines="1"
            android:visibility="invisible"
            android:background="@color/humana_card_background"
            android:textColor="@color/gray_5" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/day_event2"
            android:textSize="14sp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:fontFamily="@font/hind_medium"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:lines="1"
            android:ellipsize="end"
            android:visibility="invisible"
            android:background="@color/humana_card_background"
            android:textColor="@color/gray_5" />

        <View
            android:id="@+id/event_id"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/dark_red"
            android:textSize="13sp"
            android:visibility="invisible" />
    </LinearLayout>
</layout>