<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="ResetPasswordViewModel" />

        <import type="org.edx.mobile.tta.ui.reset_password.view_model.ResetPasswordViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_40px"
                android:layout_marginTop="@dimen/_98px"
                android:text="@string/reset_password"
                android:textColor="@color/primary_navy"
                android:textSize="20sp"
                android:fontFamily="@font/hind_medium"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_40px"
                android:layout_marginTop="@dimen/_16px"
                android:text="@string/set_password"
                android:textColor="@color/primary_navy"
                android:textSize="15sp"
                android:fontFamily="@font/hind_medium" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_40px"
                android:layout_marginTop="@dimen/_60px"
                android:layout_marginEnd="@dimen/_40px"
                android:textColorHint="@color/gray_1"
                app:hintTextAppearance="@style/TextColorHint"
                android:theme="@style/TextAppearence.App.TextInputLayout"
                password_toggle_enabled="@{viewModel.passToggleEnabled}"
                password_toggle_drawable="@{viewModel.passDrawable}">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/password"
                    android:text="@{viewModel.password}"
                    android:textColorHint="@color/gray_1"
                    android:textColor="@color/gray_4"
                    android:textSize="14sp"
                    android:inputType="textPassword"
                    android:fontFamily="@font/hind_medium"
                    text_changed_listener="@{viewModel.passWatcher}"
                    android:paddingBottom="@dimen/_14px"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_40px"
                android:layout_marginTop="@dimen/_34px"
                android:layout_marginEnd="@dimen/_40px"
                android:textColorHint="@color/gray_1"
                app:hintTextAppearance="@style/TextColorHint"
                android:theme="@style/TextAppearence.App.TextInputLayout"
                password_toggle_enabled="@{viewModel.confirmPassToggleEnabled}"
                password_toggle_drawable="@{viewModel.confirmPassDrawable}">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/confirm_new_password"
                    android:text="@{viewModel.confirmPassword}"
                    android:textColorHint="@color/gray_1"
                    android:textColor="@color/gray_4"
                    android:textSize="14sp"
                    android:inputType="textPassword"
                    android:fontFamily="@font/hind_medium"
                    text_changed_listener="@{viewModel.ConfirmPassWatcher}"
                    android:paddingBottom="@dimen/_14px"/>

            </android.support.design.widget.TextInputLayout>

            <Button
                android:layout_width="240dp"
                android:layout_height="32dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:layout_marginTop="@dimen/_98px"
                android:text="@string/submit"
                android:textColor="@color/white"
                android:fontFamily="@font/hind_medium"
                android:background="@drawable/btn_selector_filled"
                android:enabled="@{viewModel.passValid &amp;&amp; viewModel.confirmPassValid}"
                android:onClick="@{()->viewModel.submit()}"/>

        </LinearLayout>

    </ScrollView>

</layout>