                    app:mx_titleTextSize="5sp" />

            </LinearLayout>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_48px">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20px"
                    android:fontFamily="@font/hind_medium"
                    android:text="@string/my_certificates"
                    android:textColor="@color/gray_5"
                    android:textSize="14sp" />

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_marginStart="@dimen/_20px"
                    android:layout_marginTop="@dimen/_20px"
                    android:layout_marginEnd="@dimen/_20px"
                    android:layout_marginBottom="@dimen/_20px"
                    android:onClick="@{()->viewModel.showCertificates()}"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="@dimen/_10px">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/_26px"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/hind_medium"
                                android:text="@{viewModel.nCertificates}"
                                android:textColor="@color/gray_5"
                                android:textSize="20sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_30px"
                                android:drawableEnd="@drawable/ic_arrow_right_cyan_24dp"
                                android:fontFamily="@font/hind_medium"
                                android:gravity="center_vertical"
                                android:text="@string/all_certificates"
                                android:textColor="@color/primary_cyan"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="115dp"
                            android:layout_height="115dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="@dimen/_36px"
                            android:scaleType="fitXY"
                            android:src="@drawable/two_certificates_compressed" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</layout>