<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="org.edx.mobile.tta.ui.profile.view_model.ProfileViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/profile_options_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="10dp"
                    android:background="@color/app_background"
                    android:padding="8dp"
                    app:srcCompat="@drawable/t_icon_ellipsis_v" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ln1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20px"
                android:layout_marginTop="@dimen/_10px"
                android:layout_marginEnd="@dimen/_20px"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:id="@+id/imageProfile"
                        placeholder="@{viewModel.userImagePlaceholder}"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@{viewModel.userImageUrl}" />

                </android.support.v7.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="@dimen/_18px"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_16px"
                        android:layout_marginEnd="@dimen/_16px"
                        android:fontFamily="@font/hind_medium"
                        android:text="@{viewModel.profileModel.name}"
                        android:textColor="@color/gray_5"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:id="@+id/llPadaav"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_16px"
                        android:layout_marginEnd="@dimen/_16px"
                        android:layout_marginTop="@dimen/_18px"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/t_icon_padaav" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/hind_medium"
                            android:paddingStart="@dimen/_10px"
                            android:paddingEnd="@dimen/_10px"
                            android:text="@string/padaav"
                            android:textColor="@color/primary_cyan"
                            android:textSize="14sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_arrow_right_cyan_24dp" />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="320dp"
                android:layout_height="8dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_30px"
                android:progress="35"
                android:progressDrawable="@drawable/t_progress"
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/llPoints"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16px"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/hind_semibold"
                    android:text="125"
                    android:textColor="@color/secondary_pink"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/hind_regular"
                    android:text="/300"
                    android:textColor="@color/primary_navy"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/hind_regular"
                    android:text="@string/number"
                    android:layout_margin="@dimen/_2px"
                    android:textColor="@color/primary_navy"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_30px"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_36px"
                                android:layout_marginTop="@dimen/_48px"
                                android:layout_marginBottom="@dimen/_26px"
                                app:srcCompat="@drawable/t_icon_class" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10px"
                                android:layout_marginTop="@dimen/_48px"
                                android:layout_marginEnd="@dimen/_16px"
                                android:fontFamily="@font/hind_medium"
                                android:text="@string/classes_taught"
                                android:textColor="@color/gray_6"
                                android:textSize="16sp" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_36px"
                            android:layout_marginEnd="@dimen/_16px"
                            android:layout_marginBottom="@dimen/_40px"
                            android:fontFamily="@font/hind_regular"
                            android:text="@{viewModel.classes}"
                            android:textColor="@color/gray_6"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/edx_brand_gray_back" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_36px"
                                android:layout_marginTop="@dimen/_48px"
                                android:layout_marginBottom="@dimen/_26px"
                                app:srcCompat="@drawable/t_icon_course" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10px"
                                android:layout_marginTop="@dimen/_48px"
                                android:layout_marginEnd="@dimen/_16px"
                                android:fontFamily="@font/hind_medium"
                                android:text="@string/skills"
                                android:textColor="@color/gray_6"
                                android:textSize="16sp" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_36px"
                            android:layout_marginEnd="@dimen/_16px"
                            android:layout_marginBottom="@dimen/_40px"
                            android:fontFamily="@font/hind_regular"
                            android:text="@{viewModel.skills}"
                            android:textColor="@color/gray_6"
                            android:textSize="14sp" />

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:id="@+id/row_half_separator"
                    style="@style/gray_separator"
                    android:layout_marginStart="@dimen/course_item_half_separator_left_margin"
                    android:layout_marginEnd="@dimen/course_item_half_separator_left_margin" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_36px"
                                android:layout_marginTop="@dimen/_40px"
                                android:layout_marginBottom="@dimen/_26px"
                                app:srcCompat="@drawable/t_icon_follower" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10px"
                                android:layout_marginTop="@dimen/_40px"
                                android:layout_marginEnd="@dimen/_16px"
                                android:fontFamily="@font/hind_medium"
                                android:text="@string/following"
                                android:textColor="@color/gray_6"
                                android:textSize="16sp" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_36px"
                            android:layout_marginEnd="@dimen/_16px"
                            android:layout_marginBottom="@dimen/_40px"
                            android:fontFamily="@font/hind_medium"
                            android:text="@{viewModel.following}"
                            android:textColor="@color/gray_5"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/edx_brand_gray_back" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_36px"
                                android:layout_marginTop="@dimen/_48px"
                                android:layout_marginBottom="@dimen/_26px"
                                app:srcCompat="@drawable/t_icon_following" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10px"
                                android:layout_marginTop="@dimen/_48px"
                                android:layout_marginEnd="@dimen/_16px"
                                android:fontFamily="@font/hind_medium"
                                android:text="@string/followers"
                                android:textColor="@color/gray_6"
                                android:textSize="16sp" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_36px"
                            android:layout_marginEnd="@dimen/_16px"
                            android:layout_marginBottom="@dimen/_40px"
                            android:fontFamily="@font/hind_medium"
                            android:text="@{viewModel.followers}"
                            android:textColor="@color/gray_5"
                            android:textSize="16sp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!--<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_48px"
                android:orientation="vertical"
                android:visibility="gone">

                <com.maurya.mx.mxlib.view.MxFiniteRecyclerView
