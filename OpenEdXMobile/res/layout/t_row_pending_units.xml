<?xml version="1.0" encoding="utf-8"?>
<layout>

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10px">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_unit_name"
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:fontFamily="@font/hind_medium"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10px"
                android:textSize="@dimen/_16px_sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_8px"
                android:id="@+id/ll_approval"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_approve"
                    style="@style/edX.Widget.Button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="start|center"
                    android:padding="@dimen/_8px"
                    android:text="Approve"
                    android:drawableLeft="@drawable/check"/>

                <Button
                    android:id="@+id/btn_reject"
                    style="@style/edX.Widget.Button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:padding="@dimen/_8px"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_close_black_24dp"
                    android:gravity="start|center"
                    android:text="Reject" />
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</layout>