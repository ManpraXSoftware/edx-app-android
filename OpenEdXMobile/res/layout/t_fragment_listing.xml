<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="org.edx.mobile.tta.ui.listing.view_model.ListingViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/app_background">
        
        <android.support.design.widget.TabLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/listing_tab_layout"
            app:tabTextColor="@color/gray_5"
            app:tabSelectedTextColor="@color/gray_4"
            app:tabIndicatorColor="@color/primary_cyan"
            app:tabIndicatorHeight="2dp"
            android:elevation="2dp"
            app:tabMode="scrollable" />

        <android.support.v4.view.ViewPager
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/listing_view_pager"
            pager_adapter="@{viewModel.adapter}"/>
        
    </LinearLayout>

</layout>