<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    
    <data>
        <variable
            name="viewModel"
            type="org.humana.mobile.tta.data.Notification" />
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="5dp"
        app:cardCornerRadius="4dp"
        android:id="@+id/cv_unit"
        android:padding="5dp"
        app:cardBackgroundColor="@color/humana_card_background"
        app:cardUseCompatPadding="true">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/notification_icon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/_40px"
                android:visibility="gone"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/notification_title"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="@dimen/_40px"
                android:layout_marginEnd="@dimen/_40px"
                android:layout_marginTop="5dp"
                android:textColor="@color/gray_5"
                android:enabled="true"
                android:textSize="13sp"
                android:fontFamily="@font/hind_bold"
                android:text="@{viewModel.title}"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/notification_desc"
                app:layout_constraintTop_toBottomOf="@id/notification_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="@dimen/_40px"
                android:layout_marginEnd="@dimen/_40px"
                android:layout_marginTop="5dp"
                android:textColor="@color/gray_5"
                android:textSize="12sp"
                android:text="@{viewModel.desc}"
                android:fontFamily="@font/hind_medium"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/notification_note"
                app:layout_constraintTop_toBottomOf="@id/notification_desc"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="@dimen/_40px"
                android:layout_marginEnd="@dimen/_40px"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="12dp"
                android:textColor="@color/gray_5"
                android:textSize="12sp"
                android:visibility="gone"
                android:text="@{viewModel.desc}"
                android:fontFamily="@font/hind_medium"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/notification_date"
                app:layout_constraintTop_toBottomOf="@id/notification_note"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="@dimen/_40px"
                android:layout_marginEnd="@dimen/_40px"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/gray_5"
                android:textSize="12sp"
                android:fontFamily="@font/hind_medium"/>


        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</layout>