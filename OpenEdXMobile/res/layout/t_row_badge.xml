<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="viewModel"
            type="org.edx.mobile.tta.data.local.db.table.Badge" />
    </data>

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_26px"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivBadgeimage"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/tvbadgename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/hind_regular"
            android:layout_marginTop="@dimen/_16px"
            android:textColor="@color/secondary_pink"
            android:text=""
            android:textSize="14sp" />
    </LinearLayout>
</layout>