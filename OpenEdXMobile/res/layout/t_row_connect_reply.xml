<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="org.humana.mobile.tta.wordpress_client.model.Comment" />
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10px"
        android:layout_marginBottom="@dimen/_10px"
        app:cardBackgroundColor="@color/app_background"
        android:minHeight="180dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:background="@drawable/t_background_connect_comment"
            android:minHeight="180dp"
            android:orientation="vertical">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16px"
                android:layout_marginEnd="@dimen/_16px"
                android:paddingTop="@dimen/_16px"
                android:minHeight="180dp">

                <android.support.v7.widget.CardView
                    android:id="@+id/reply_user_image"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="0dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/reply_rounded_user_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY" />

                </android.support.v7.widget.CardView>

                <TextView
                    android:id="@+id/reply_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.authorName}"
                    android:layout_marginStart="@dimen/_8px"
                    android:fontFamily="@font/hind_medium"
                    android:textColor="@color/primary_cyan"
                    android:textSize="12sp"
                    app:layout_constraintStart_toEndOf="@id/reply_user_image"
                    app:layout_constraintTop_toTopOf="@id/reply_user_image" />

                <TextView
                    android:id="@+id/reply_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8px"
                    android:layout_marginTop="@dimen/_6px"
                    android:fontFamily="@font/hind_regular"
                    android:textColor="@color/gray_4"
                    android:textSize="8sp"
                    app:layout_constraintBottom_toBottomOf="@id/reply_user_image"
                    app:layout_constraintStart_toEndOf="@id/reply_user_image"
                    app:layout_constraintTop_toBottomOf="@id/reply_user_name" />

                <TextView
                    android:id="@+id/reply_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="60dp"
                    android:layout_marginTop="@dimen/_16px"
                    android:layout_marginBottom="@dimen/_16px"
                    android:fontFamily="@font/hind_light"
                    android:textColor="@color/gray_5"
                    android:textSize="12sp"
                    app:layout_constraintTop_toBottomOf="@id/reply_user_image" />

                <View
                    android:id="@+id/reply_divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_1"
                    app:layout_constraintTop_toBottomOf="@id/reply_comment" />

                <LinearLayout
                    android:id="@+id/reply_comment_like_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    app:layout_constraintTop_toBottomOf="@id/reply_divider"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <TextView
                        android:id="@+id/reply_comment_likes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/hind_medium"
                        android:textColor="@color/gray_3"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/reply_comment_like_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="3dp"
                        android:contentDescription="@string/like"
                        android:paddingBottom="4dp"
                        app:srcCompat="@drawable/t_icon_like" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="2dp"
                        android:fontFamily="@font/hind_medium"
                        android:text="@string/like"
                        android:textColor="@color/gray_3"
                        android:textSize="12sp" />

                </LinearLayout>

            </android.support.constraint.ConstraintLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</layout>