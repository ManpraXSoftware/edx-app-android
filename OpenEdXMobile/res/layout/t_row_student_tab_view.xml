<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="org.humana.mobile.tta.ui.programs.students.view_model.StudentsViewModel" />
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        android:background="@color/humana_card_background"
        app:cardElevation="@dimen/_16px"
        android:shadowColor="@color/gray_1"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/humana_card_background"
            android:orientation="vertical">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/user_image"
                android:layout_marginTop="@dimen/_12px"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitXY"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ll_status"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_pending"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start|center"
                        android:drawablePadding="5dp"
                        android:padding="5dp"
                        android:textColor="@color/black"
                        android:drawableLeft="@drawable/check"
                        android:fontFamily="@font/hind_medium" />

                    <TextView
                        android:id="@+id/txt_completed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start|center"
                        android:drawablePadding="5dp"
                        android:padding="5dp"
                        android:textColor="@color/gray_5"
                        android:drawableLeft="@drawable/ic_access_time_red_24dp"
                        android:fontFamily="@font/hind_medium" />

                </LinearLayout>

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/user_name"
                android:textSize="20sp"
                android:textColor="@color/gray_5"
                android:gravity="center"
                android:fontFamily="@font/hind_bold"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:singleLine="true"
                android:ellipsize="marquee" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text_degree"
                android:textSize="14sp"
                android:textColor="@color/gray_5"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:text="Associate Professor"
                android:fontFamily="@font/hind_semibold"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:singleLine="true"
                android:ellipsize="marquee" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="@dimen/_10px"
                    android:id="@+id/img_insta"
                    android:src="@drawable/ic_insta" />
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="@dimen/_10px"
                    android:id="@+id/img_twitter"
                    android:src="@drawable/ic_twitter" />
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="@dimen/_10px"
                    android:src="@drawable/ic_facebook_img"
                    android:layout_margin="5dp"
                    android:tint="@color/com_facebook_blue"/>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="@dimen/_10px"
                    android:id="@+id/img_web"
                    android:src="@drawable/internet_web_browser"/>
            </LinearLayout>

            <!--<Button-->
            <!--android:layout_width="100dp"-->
            <!--android:layout_height="25dp"-->
            <!--android:id="@+id/follow_btn"-->
            <!--android:layout_gravity="center_horizontal"-->
            <!--android:gravity="center"-->
            <!--android:layout_marginTop="15dp"-->
            <!--android:text="View"-->
            <!--android:textSize="12sp"-->
            <!--android:textColor="@color/primary_cyan"-->
            <!--android:fontFamily="@font/hind_medium"-->
            <!--android:background="@drawable/btn_selector_hollow"-->
            <!--android:enabled="true"/>-->

        </LinearLayout>

    </android.support.v7.widget.CardView>

</layout>