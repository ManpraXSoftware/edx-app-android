<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="org.tta.mobile.tta.data.local.db.table.Feed" />
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10px"
        android:layout_marginBottom="@dimen/_10px"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="0dp"
        app:cardElevation="@dimen/_6px">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/feed_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20px"
                android:layout_marginEnd="@dimen/_20px"
                android:paddingTop="@dimen/_12px"
                android:paddingBottom="@dimen/_10px"
                android:textSize="12sp"
                android:textColor="@color/gray_5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_18px"
                android:layout_marginEnd="@dimen/_18px"
                android:layout_marginBottom="@dimen/_28px"
                android:background="@drawable/t_feed_box_background"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_22px"
                    android:layout_marginEnd="@dimen/_22px"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/_14px"
                    android:paddingBottom="@dimen/_14px">

                    <LinearLayout
                        android:id="@+id/meta_user_layout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/feed_user_image"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center_vertical"
                            android:scaleType="fitXY" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/_6px"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/feed_user_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/hind_regular"
                                android:text="@{viewModel.meta_data.user_name}"
                                android:textColor="@color/gray_5"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/feed_user_classes"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:textColor="@color/gray_4"
                                android:textSize="8sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/feed_share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        app:srcCompat="@drawable/t_icon_share"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="@dimen/_22px"
                    android:layout_marginEnd="@dimen/_22px"
                    android:background="@color/gray_2" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/meta_content"
                    android:layout_marginStart="@dimen/_22px"
                    android:layout_marginEnd="@dimen/_22px"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/_28px"
                    android:paddingBottom="@dimen/_28px">

                    <ImageView
                        android:id="@+id/feed_content_image"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:scaleType="fitXY" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:layout_marginStart="@dimen/_18px"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/feed_content_title"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:textColor="@color/gray_5"
                            android:textSize="12sp"
                            android:fontFamily="@font/hind_medium"
                            android:layout_marginEnd="@dimen/_40px"
                            android:layout_weight="1"
                            android:text="@{viewModel.meta_data.text}" />

                        <Button
                            android:id="@+id/feed_content_view_btn"
                            android:layout_width="100dp"
                            android:layout_height="25dp"
                            android:layout_marginTop="4dp"
                            android:background="@drawable/btn_selector_hollow"
                            android:enabled="true"
                            android:fontFamily="@font/hind_medium"
                            android:gravity="center"
                            android:text="@string/view"
                            android:textColor="@color/primary_cyan"
                            android:textSize="12sp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/feed_like_comment_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_22px"
                    android:layout_marginEnd="@dimen/_22px"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray_2" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/feed_like_layout"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:padding="8dp">

                                <TextView
                                    android:id="@+id/feed_likes"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:fontFamily="@font/hind_medium"
                                    android:text="@{String.valueOf(viewModel.meta_data.like_count)}"
                                    android:textColor="@color/gray_3"
                                    android:textSize="12sp" />

                                <ImageView
                                    android:id="@+id/feed_like_image"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="3dp"
                                    android:contentDescription="@string/like"
                                    android:paddingBottom="4dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="2dp"
                                    android:fontFamily="@font/hind_medium"
                                    android:text="@string/like"
                                    android:textColor="@color/gray_3"
                                    android:textSize="12sp" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/feed_comment_layout"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:padding="8dp">

                                <TextView
                                    android:id="@+id/feed_comments"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:fontFamily="@font/hind_medium"
                                    android:text="@{String.valueOf(viewModel.meta_data.comment_count)}"
                                    android:textColor="@color/gray_3"
                                    android:textSize="12sp" />

                                <ImageView
                                    android:id="@+id/feed_comment_image"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="3dp"
                                    android:contentDescription="@string/like"
                                    android:paddingBottom="4dp"
                                    app:srcCompat="@drawable/t_icon_reply" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="2dp"
                                    android:fontFamily="@font/hind_medium"
                                    android:text="@string/comment"
                                    android:textColor="@color/gray_3"
                                    android:textSize="12sp" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</layout>