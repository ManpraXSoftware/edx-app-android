<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="SwipeLaunchViewModel" />

        <import type="org.edx.mobile.tta.ui.launch.view_model.SwipeLaunchViewModel" />
        <import type="android.view.View" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/launch_background"
            android:orientation="vertical">

            <android.support.v4.view.ViewPager
                android:id="@+id/view_pager"
                pager_adapter="@{viewModel.adapter}"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                page_change_listener="@{viewModel.listener}"/>

            <android.support.design.widget.TabLayout
                android:id="@+id/tab_layout"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:clickable="false"
                app:tabBackground="@drawable/tab_dot_selector"
                app:tabGravity="center"
                app:tabIndicatorHeight="0dp" />

        </LinearLayout>

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="14dp"
            app:srcCompat="@drawable/ic_arrow_forward_cyan_24dp"
            app:backgroundTint="@color/white"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:visibility="@{viewModel.fabVisible?View.VISIBLE:View.GONE}"
            android:onClick="@{()->viewModel.next()}"/>

    </RelativeLayout>

</layout>