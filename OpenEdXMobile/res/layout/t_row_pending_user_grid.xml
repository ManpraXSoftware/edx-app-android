    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        android:background="@color/humana_card_background"
        app:cardElevation="@dimen/_16px"
        android:shadowColor="@color/gray_1"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="@dimen/_14px">
    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/humana_card_background">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/user_image"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/profile_photo_placeholder"
                android:scaleType="fitXY"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/user_name"
                android:textSize="12sp"
                android:textColor="@color/gray_5"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:fontFamily="@font/hind_medium"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:singleLine="true"
                android:ellipsize="marquee" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text_count"
                android:textSize="12sp"
                android:textColor="@color/gray_5"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:fontFamily="@font/hind_medium"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:singleLine="true"
                android:ellipsize="marquee"/>
        </LinearLayout>

    </android.support.design.widget.CoordinatorLayout>
    </android.support.v7.widget.CardView>

</layout>