<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="org.edx.mobile.tta.ui.programs.students.view_model.StudentsViewModel" />
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        android:background="@color/humana_card_background"
        app:cardElevation="@dimen/_16px"
        android:shadowColor="@color/gray_1"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="@dimen/_14px">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/humana_card_background"
            android:orientation="vertical">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/user_image"
                android:layout_marginTop="@dimen/_12px"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitXY"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/user_name"
                android:textSize="12sp"
                android:textColor="@color/gray_5"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:fontFamily="@font/hind_medium"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:singleLine="true"
                android:ellipsize="marquee" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ll_status"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_pending"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:background="@color/secondary_blue_light"
                        android:gravity="center"
                        android:padding="12dp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/hind_medium" />

                    <TextView
                        android:id="@+id/txt_completed"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/status_completed"
                        android:gravity="center"
                        android:padding="12dp"
                        android:fontFamily="@font/hind_medium" />

                </LinearLayout>

            </LinearLayout>

            <!--<Button-->
                <!--android:layout_width="100dp"-->
                <!--android:layout_height="25dp"-->
                <!--android:id="@+id/follow_btn"-->
                <!--android:layout_gravity="center_horizontal"-->
                <!--android:gravity="center"-->
                <!--android:layout_marginTop="15dp"-->
                <!--android:text="View"-->
                <!--android:textSize="12sp"-->
                <!--android:textColor="@color/primary_cyan"-->
                <!--android:fontFamily="@font/hind_medium"-->
                <!--android:background="@drawable/btn_selector_hollow"-->
                <!--android:enabled="true"/>-->

        </LinearLayout>

    </android.support.v7.widget.CardView>

</layout>