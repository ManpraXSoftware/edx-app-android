<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="org.humana.mobile.tta.ui.programs.students.view_model.StudentsViewModel" />
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        android:background="@color/humana_card_background"
        app:cardElevation="@dimen/_16px"
        android:id="@+id/user_card"
        android:shadowColor="@color/gray_1"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/humana_card_background"
            android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/user_image"
                android:layout_marginStart="8dp"
                android:layout_gravity="start|center"
                android:scaleType="centerCrop"
                android:src="@drawable/profile_photo_placeholder"
                android:padding="5dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/user_name"
                    android:textSize="20sp"
                    android:textColor="@color/gray_5"
                    android:gravity="center"
                    android:fontFamily="@font/hind_bold"
                    android:paddingEnd="8dp"
                    android:singleLine="true"
                    android:ellipsize="marquee" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_degree"
                    android:textSize="14sp"
                    android:textColor="@color/gray_5"
                    android:gravity="center"
                    android:fontFamily="@font/hind_semibold"
                    android:paddingEnd="8dp"
                    android:singleLine="true"
                    android:ellipsize="marquee" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start|center"
                    android:id="@+id/ll_status"
                    android:padding="2dp"
                    android:layout_margin="2dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:drawablePadding="5dp"
                        android:fontFamily="@font/hind_medium"
                        android:gravity="center"
                        android:text="Approved Units"
                        android:textSize="12sp"
                        android:layout_gravity="center"
                        android:textColor="@color/black" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start|center"
                    android:padding="2dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_pending"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:drawableLeft="@drawable/check"
                        android:drawablePadding="5dp"
                        android:fontFamily="@font/hind_medium"
                        android:gravity="start|center"
                        android:drawableTint="@color/secondary_green"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/txt_completed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start|center"
                        android:drawablePadding="5dp"
                        android:textColor="@color/gray_5"
                        android:drawableTint="@color/secondary_green"
                        android:drawableLeft="@drawable/ic_access_time_red_24dp"
                        android:fontFamily="@font/hind_medium" />

                </LinearLayout>

                </LinearLayout>



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:id="@+id/img_insta"
                        android:padding="5dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/linkdin_icon" />
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:id="@+id/img_twitter"
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:src="@drawable/ic_twitter" />
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:id="@+id/img_facebook"
                        android:tint="@color/com_facebook_blue"
                        android:src="@drawable/ic_facebook_img" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start|center"
                android:id="@+id/ll_current_status"
                android:layout_gravity="bottom"
                android:padding="2dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/humana_rounded_rect"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawablePadding="5dp"
                    android:fontFamily="@font/hind_medium"
                    android:gravity="center"
                    android:text="Current Units"
                    android:textSize="11sp"
                    android:layout_margin="8dp"
                    android:layout_gravity="center"
                    android:textColor="@color/black" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start|center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_current_pending"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/check"
                        android:drawablePadding="2dp"
                        android:fontFamily="@font/hind_medium"
                        android:gravity="start|center"
                        android:textSize="11sp"
                        android:drawableTint="@color/pending_orange"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/txt_current_completed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start|center"
                        android:drawablePadding="2dp"
                        android:textSize="11sp"
                        android:paddingStart="5dp"
                        android:drawableTint="@color/pending_orange"
                        android:textColor="@color/gray_5"
                        android:drawableLeft="@drawable/ic_access_time_red_24dp"
                        android:fontFamily="@font/hind_medium" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</layout>