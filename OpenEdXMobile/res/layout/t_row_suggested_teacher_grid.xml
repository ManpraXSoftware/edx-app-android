<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="org.tta.mobile.tta.data.model.feed.SuggestedUser" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        app:cardCornerRadius="4dp"
        android:background="@color/white"
        app:cardElevation="@dimen/_16px"
        android:shadowColor="@color/gray_1"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="@dimen/_14px"
        android:layout_marginBottom="@dimen/_30px">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/user_image"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitXY"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/user_name"
                android:textSize="12sp"
                android:textColor="@color/gray_5"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:fontFamily="@font/hind_medium"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:singleLine="true"
                android:text="@{viewModel.name}"/>

            <Button
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:id="@+id/follow_btn"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:layout_marginTop="15dp"
                android:text="@string/follow"
                android:textSize="12sp"
                android:textColor="@color/primary_cyan"
                android:fontFamily="@font/hind_medium"
                android:background="@drawable/btn_selector_hollow"
                android:enabled="true"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</layout>