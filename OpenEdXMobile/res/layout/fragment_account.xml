<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<android.support.design.widget.CoordinatorLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/humana_card_background"
    android:id="@+id/cl_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|end"
                android:orientation="vertical"
                android:background="@color/humana_card_background">

                <TextView
                    android:id="@+id/tv_notification_badge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|bottom"
                    android:layout_marginEnd="24dp"
                    android:background="@drawable/circle_material_red"
                    android:fontFamily="@font/hind_bold"
                    android:gravity="start|bottom"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <!--<TextView-->
                    <!--android:layout_height="80dp"-->
                    <!--android:layout_width="80dp"-->
                    <!--android:id="@+id/show_notifications"-->
                    <!--android:textColor="@color/dark_red"-->
                    <!--android:fontFamily="@font/hind_bold"-->
                    <!--android:textSize="20sp"-->
                    <!--android:gravity="top"-->
                    <!--android:layout_marginRight="10dp"-->
                    <!--android:drawableTop="@color/material_red_500"-->
                    <!--android:drawableTint="@color/material_red_500"-->
                    <!--android:drawableLeft="@drawable/t_icon_notification" />-->
                <ImageView
                    android:id="@+id/show_notifications"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="512dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foregroundGravity="center"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:paddingBottom="5dp"
                    android:tint="@color/humana_light_blue"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:srcCompat="@drawable/t_icon_notification" />

            </android.support.constraint.ConstraintLayout>
        <LinearLayout
            android:id="@+id/button_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:divider="@drawable/edx_divider"
            android:orientation="vertical"
            android:background="@color/humana_card_background"
            android:paddingBottom="@dimen/widget_margin"
            android:showDividers="middle|end"
            android:splitMotionEvents="false">

            <TextView
                android:id="@+id/profile_btn"
                style="@style/account_option"
                android:text="@string/profile_title" />

            <TextView
                android:id="@+id/settings_btn"
                style="@style/account_option"
                android:text="@string/label_settings" />

            <TextView
                android:id="@+id/feedback_btn"
                style="@style/account_option"
                android:text="@string/label_submit_feedback" />
            <TextView
                android:id="@+id/change_prog_btn"
                style="@style/account_option"
                android:text="@string/label_change_program" />
            <TextView
                android:id="@+id/activate_tutorial_btn"
                style="@style/account_option"
                android:text="@string/label_activate_tutorial" />

            <TextView
                android:id="@+id/logout_btn"
                style="@style/account_option"
                android:text="@string/logout" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_version_no"
            style="@style/regular_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/edx_margin"
            android:gravity="center_horizontal"
            android:textColor="@color/edx_brand_gray_base"
            android:textSize="@dimen/drawer_app_version_text"
            android:background="@color/humana_card_background"
            tools:text="Version Major.Minor.Patch" />
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>
</layout>
