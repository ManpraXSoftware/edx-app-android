<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="period"
            type="org.edx.mobile.tta.data.local.db.table.Period" />
    </data>

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="@dimen/_14px"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="@dimen/_30px"
        android:background="@color/white"
        app:cardCornerRadius="4dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:textColor="@color/black"
                android:layout_marginEnd="@dimen/_10px"
                android:layout_marginTop="@dimen/_10px"
                android:padding="5dp"
                android:text="@{period.language}"
                android:background="@drawable/red_rect_rounded_corner" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center|top"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_school_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="4dp"
                    android:fontFamily="@font/hind_medium"
                    android:text="@{period.title}"
                    android:gravity="top|center"
                    android:textColor="@color/gray_5"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_scheduled_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="4dp"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_options"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:gravity="center"
                android:padding="4dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_options"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center" />

            </LinearLayout>

            <Button
                android:id="@+id/btn_schedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:drawablePadding="8dp"
                android:fontFamily="@font/hind_medium"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="@{period.code}"
                android:textColor="@color/gray_5"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textview_add"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:background="@color/status_pending"
                    android:fontFamily="@font/hind_medium"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Add" />

                <TextView
                    android:id="@+id/txt_completed"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/pending_orange"
                    android:fontFamily="@font/hind_medium"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="@{String.valueOf(period.completedCount)}"
                    />
                <TextView
                    android:id="@+id/txt_total"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/status_completed"
                    android:fontFamily="@font/hind_medium"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="@{String.valueOf(period.totalCount)}" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>
</layout>