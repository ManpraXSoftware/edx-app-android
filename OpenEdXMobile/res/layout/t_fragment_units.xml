<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="org.humana.mobile.tta.ui.programs.units.view_model.UnitsViewModel" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/searchview_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingBottom="2dp"
            app:layout_constraintTop_toTopOf="parent">

            <EditText
                onSearchInSoftKeyboard="@{()->viewModel.searchUnits()}"
                text_changed_listener="@{viewModel.watcher}"
                tool_tip="@{viewModel.searchTooltipText}"
                tool_tip_gravity="@{viewModel.searchTooltipGravity}"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_24px"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="@dimen/_24px"
                android:layout_weight="1"
                android:background="@drawable/rectangle_transparent"
                android:drawableLeft="@drawable/search_selected"
                android:drawablePadding="5dp"
                android:hint="Search units.."
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:padding="10dp"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/switch_unit"
                tool_tip="@{viewModel.calenderTooltipText}"
                tool_tip_gravity="@{viewModel.calenderTooltipGravity}"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|end"
                android:layout_marginEnd="8dp"
                android:maxHeight="20dp"
                android:layout_weight="0.1"
                android:foregroundGravity="center"
                android:gravity="center"
                android:background="@drawable/t_icon_calendar"
                android:backgroundTint="@color/material_red_500"
                android:visibility="@{viewModel.calVisible?View.GONE:View.VISIBLE}"
                android:onClick="@{() ->viewModel.changeToCalenderView(true)}"
                android:tint="@color/material_red_500" />
            <ImageView
                android:id="@+id/hide_unit"
                tool_tip="@{viewModel.calenderTooltipText}"
                tool_tip_gravity="@{viewModel.calenderTooltipGravity}"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:maxHeight="20dp"
                android:layout_weight="0.1"
                android:layout_gravity="center|end"
                android:layout_marginEnd="8dp"
                android:foregroundGravity="center"
                android:gravity="center"
                android:background="@drawable/t_icon_calendar"
                android:backgroundTint="@color/secondary_green"
                android:visibility="@{viewModel.calVisible?View.VISIBLE:View.GONE}"
                android:onClick="@{() ->viewModel.changeToCalenderView(false)}"
                android:tint="@color/material_red_500" />
        </LinearLayout>

        <com.maurya.mx.mxlib.view.MxFiniteRecyclerView
            finite_recycler_adapter="@{viewModel.filtersAdapter}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="12dp"
            android:visibility="@{viewModel.filtersVisible?View.VISIBLE:View.GONE}"
            app:mx_itemLimit="100"
            app:mx_moreButtonVisible="false"
            app:mx_titleVisible="false" />

        <FrameLayout
            android:id="@+id/cal_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="@{viewModel.calVisible?View.VISIBLE:View.GONE}">

            <com.lib.mxcalendar.view.MxCalenderView
                android:id="@+id/calendar_view"
                onCalendarRefresh="@{viewModel.eventObservable}"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible">

            </com.lib.mxcalendar.view.MxCalenderView>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_unit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="@{viewModel.frameVisible ? View.VISIBLE : View.GONE}">

            <com.maurya.mx.mxlib.view.MxRecyclerView
                infinite_load_more_listener="@{viewModel.loadMoreListener}"
                infinite_recycler_adapter="@{viewModel.unitsAdapter}"
                layout_manager="@{viewModel.layoutManager}"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:mx_itemLayout="@layout/t_row_unit" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:visibility="@{viewModel.emptyVisible ? View.VISIBLE : View.GONE}">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    app:srcCompat="@drawable/t_icon_error" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="@dimen/_70px"
                    android:layout_marginTop="@dimen/_46px"
                    android:layout_marginEnd="@dimen/_70px"
                    android:fontFamily="@font/hind_regular"
                    android:gravity="center"
                    android:text="No unit is available"
                    android:textColor="@color/primary_cyan"
                    android:textSize="12sp" />

            </LinearLayout>

        </FrameLayout>
    </LinearLayout>
</layout>