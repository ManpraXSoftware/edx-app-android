<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />
        <variable
            name="viewModel"
            type="org.humana.mobile.tta.ui.programs.units.view_model.UnitsViewModel" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:animateLayoutChanges="true">
        <LinearLayout
            android:id="@+id/searchview_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/_14px"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent">

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/_24px"
                android:layout_marginTop="8dp"
                android:textSize="14sp"
                android:padding="10dp"
                android:drawablePadding="5dp"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:hint="Search units.."
                onSearchInSoftKeyboard="@{()->viewModel.searchUnits()}"
                android:drawableLeft="@drawable/search_selected"
                android:background="@drawable/rectangle_transparent"
                text_changed_listener="@{viewModel.watcher}"
                android:layout_marginEnd="@dimen/_24px"/>
            <ImageView
                android:id="@+id/assistant_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15"
                android:padding="8dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/_20dp"
                android:layout_marginTop="8dp"
                android:visibility="gone"
                android:onClick="@{()->viewModel.fetchUnits()}"
                android:contentDescription="assistant button"
                android:src="@drawable/t_icon_search_blue" />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.15"
                android:layout_gravity="center|end"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:tint="@color/material_red_500"
                android:src="@drawable/t_icon_calendar"
                android:foregroundGravity="center"
                android:onClick="@{()-> viewModel.changeToCalenderView()}"
                android:id="@+id/switch_unit"/>

        </LinearLayout>
        <com.maurya.mx.mxlib.view.MxFiniteRecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="12dp"
            app:mx_titleVisible="false"
            app:mx_moreButtonVisible="false"
            app:mx_itemLimit="100"
            finite_recycler_adapter="@{viewModel.filtersAdapter}"
            android:visibility="@{viewModel.filtersVisible?View.VISIBLE:View.GONE}"/>



        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="@{viewModel.frameVisible ? View.VISIBLE : View.GONE}"
            android:id="@+id/fl_unit">

            <com.maurya.mx.mxlib.view.MxRecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:mx_itemLayout="@layout/t_row_unit"
                infinite_recycler_adapter="@{viewModel.unitsAdapter}"
                layout_manager="@{viewModel.layoutManager}"
                infinite_load_more_listener="@{viewModel.loadMoreListener}"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:visibility="@{viewModel.emptyVisible ? View.VISIBLE : View.GONE}">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    app:srcCompat="@drawable/t_icon_error" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_46px"
                    android:layout_marginStart="@dimen/_70px"
                    android:layout_marginEnd="@dimen/_70px"
                    android:fontFamily="@font/hind_regular"
                    android:gravity="center"
                    android:text="No unit is available"
                    android:textColor="@color/primary_cyan"
                    android:textSize="12sp" />

            </LinearLayout>

        </FrameLayout>
    </LinearLayout>
</layout>