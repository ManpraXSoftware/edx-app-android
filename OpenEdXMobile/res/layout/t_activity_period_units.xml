<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />
        <variable
            name="viewModel"
            type="org.humana.mobile.tta.ui.programs.periodunits.viewmodel.PeriodUnitsViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="top"
            android:background="@color/white"
            android:gravity="start|center_vertical"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:contentInsetStartWithNavigation="0dp"
            app:navigationIcon="@drawable/back"
            app:title="@{viewModel.periodName}"
            app:titleMarginStart="0dp"
            app:titleTextAppearance="@style/ta_toolbar_title_style" />

        <LinearLayout
            android:id="@+id/searchview_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/_14px"
            app:layout_constraintTop_toTopOf="parent">

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/_24px"
                android:layout_marginTop="8dp"
                android:textSize="14sp"
                android:padding="10dp"
                android:drawablePadding="5dp"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:hint="Search units.."
                onSearchInSoftKeyboard="@{()->viewModel.searchUnits()}"
                text_changed_listener="@{viewModel.watcher}"
                android:drawableLeft="@drawable/search_selected"
                android:background="@drawable/rectangle_transparent"
                android:layout_marginEnd="@dimen/_24px"/>

            <ImageView
                android:id="@+id/switch_unit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|end"
                android:layout_marginEnd="8dp"
                android:maxHeight="20dp"
                android:layout_weight="0.1"
                android:foregroundGravity="center"
                android:gravity="center"
                android:background="@drawable/t_icon_calendar"
                android:backgroundTint="@color/material_red_500"
                android:visibility="@{viewModel.calVisible?View.GONE:View.VISIBLE}"
                android:onClick="@{() ->viewModel.changeToCalenderView(true)}"
                android:tint="@color/material_red_500" />
            <ImageView
                android:id="@+id/hide_unit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center|end"
                android:layout_marginEnd="8dp"
                android:maxHeight="20dp"
                android:layout_weight="0.1"
                android:foregroundGravity="center"
                android:gravity="center"
                android:background="@drawable/t_icon_calendar"
                android:backgroundTint="@color/secondary_green"
                android:visibility="@{viewModel.calVisible?View.VISIBLE:View.GONE}"
                android:onClick="@{() ->viewModel.changeToCalenderView(false)}"
                android:tint="@color/material_red_500" />

        </LinearLayout>

        <com.maurya.mx.mxlib.view.MxFiniteRecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            app:mx_titleVisible="false"
            app:mx_moreButtonVisible="false"
            app:mx_itemLayout="@layout/t_row_filter_drop_down"
            app:mx_itemLimit="100"
            android:paddingStart="12dp"
            finite_recycler_adapter="@{viewModel.filtersAdapter}"
            android:visibility="@{viewModel.filtersVisible?View.VISIBLE:View.GONE}"/>
        <FrameLayout
            android:id="@+id/cal_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="@{viewModel.calVisible?View.VISIBLE:View.GONE}">

            <com.lib.mxcalendar.view.MxCalenderView
                android:id="@+id/calendar_view"
                onCalendarRefresh="@{viewModel.eventObservable}"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible">

            </com.lib.mxcalendar.view.MxCalenderView>
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <com.maurya.mx.mxlib.view.MxRecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:mx_itemLayout="@layout/t_row_unit"
                infinite_recycler_adapter="@{viewModel.unitsAdapter}"
                layout_manager="@{viewModel.layoutManager}"
                infinite_load_more_listener="@{viewModel.loadMoreListener}"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:visibility="@{viewModel.emptyVisible ? View.VISIBLE : View.GONE}">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    app:srcCompat="@drawable/t_icon_error" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_46px"
                    android:layout_marginStart="@dimen/_70px"
                    android:layout_marginEnd="@dimen/_70px"
                    android:fontFamily="@font/hind_regular"
                    android:gravity="center"
                    android:text="No unit is available"
                    android:textColor="@color/primary_cyan"
                    android:textSize="12sp" />

            </LinearLayout>

            <android.support.design.widget.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:layout_margin="@dimen/activity_horizontal_margin"
                app:srcCompat="@drawable/ic_add"
                android:onClick="@{()->viewModel.addUnits()}"
                android:visibility="visible"/>

        </FrameLayout>

    </LinearLayout>

</layout>